<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg5"
    >

   	<Button
   	    android:id="@+id/basic_button2"
   	    android:layout_width="150dp"
   	    android:layout_height="wrap_content"
   	    android:layout_x="160dp"
   	    android:layout_y="390dp"
   	    android:text="Cancel" />
   	<Button
   	    android:id="@+id/save1"
   	    android:layout_width="150dp"
   	    android:layout_height="wrap_content"
   	    android:layout_x="5dp"
   	    android:layout_y="390dp"
   	    android:text="Save" />
   	

   	<EditText
   	    android:id="@+id/department"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_x="1dp"
   	    android:layout_y="245dp"
   	    android:ems="10"
   	    android:hint="Click to enter..." />

   	<TextView
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_x="0dp"
   	    android:layout_y="217dp"
   	    android:text="Class Place"
   	    android:textSize="20dp"
   	    android:textColor="#000000" />
   	
   	<TextView
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_x="5dp"
   	    android:layout_y="285dp"
   	    android:text="lng:\nlat:"
   	    android:textSize="20dp"
   	    android:textColor="#000000" />
   	
   	<TextView
   	    android:id="@+id/lnglat"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_x="70dp"
   	    android:layout_y="285dp"
   	    android:text="116.30814954222\n40.056885091681"
   	    android:textSize="20dp"
   	    android:textColor="#8B0000" />

   	<TextView
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_x="0dp"
   	    android:layout_y="30dp"
   	    android:text="Course Name"
   	    android:textSize="20dp"
   	    android:textColor="#000000" />

   	<EditText
   	    android:id="@+id/number"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_x="2dp"
   	    android:layout_y="58dp"
   	    android:ems="10"
   	    android:hint="Click to enter..."
   	    android:textColor="#000000" />

   	<TextView
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_x="0dp"
   	    android:layout_y="105dp"
   	    android:text="Time of the 1st class"
   	    android:textSize="20dp"
   	    android:textColor="#000000" />

   	<EditText
   	    android:id="@+id/year"
   	    android:layout_width="77dp"
   	    android:layout_height="wrap_content"
   	    android:layout_x="5dp"
   	    android:layout_y="130dp"
   	    android:ems="10"
   	    android:hint="Year" />
   	
   	<TextView
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_x="80dp"
   	    android:layout_y="130dp"
   	    android:text="_"
   	    android:textSize="20dp"
   	    android:textColor="#000000" />
   	
   	<EditText
   	    android:id="@+id/month"
   	    android:layout_width="77dp"
   	    android:layout_height="wrap_content"
   	    android:layout_x="85dp"
   	    android:layout_y="130dp"
   	    android:ems="10"
   	    android:hint="Month" />
   	
   	<TextView
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_x="160dp"
   	    android:layout_y="130dp"
   	    android:text="_"
   	    android:textSize="20dp"
   	    android:textColor="#000000" />
   	<EditText
   	    android:id="@+id/day"
   	    android:layout_width="77dp"
   	    android:layout_height="wrap_content"
   	    android:layout_x="165dp"
   	    android:layout_y="130dp"
   	    android:ems="10"
   	    android:hint="Day" />
   	
   	<EditText
   	    android:id="@+id/minute"
   	    android:layout_width="70dp"
   	    android:layout_height="wrap_content"
   	    android:layout_x="85dp"
   	    android:layout_y="170dp"
   	    android:ems="10"
   	    android:hint="Min" />
   	
   	<TextView
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_x="160dp"
   	    android:layout_y="170dp"
   	    android:text=" : "
   	    android:textSize="20dp"
   	    android:textColor="#000000" />
   	<EditText
   	    android:id="@+id/second"
   	    android:layout_width="70dp"
   	    android:layout_height="wrap_content"
   	    android:layout_x="165dp"
   	    android:layout_y="170dp"
   	    android:ems="10"
   	    android:hint="Sec" />

   	

   	
		
</AbsoluteLayout>